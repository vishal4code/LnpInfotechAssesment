@model Assessment.UI.Models.ProductFilterVM
@{
    ViewData["Title"] = "Products";
}

<div class="card p-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Products</h2>
        <a class="btn btn-primary" asp-action="Create" style="height: 40px; width: 140px;">+ Add Product</a>
    </div>

    <!-- Filter Section -->
    <form method="get" class="mb-4">
        <div class="row g-3">
            <!-- Search -->
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" 
                    placeholder="Search by product name" value="@Model.Search" />
            </div>

            <!-- Min Price -->
            <div class="col-md-2">
                <input type="number" name="minPrice" class="form-control" 
                    placeholder="Min Price" value="@Model.MinPrice" step="0.01" />
            </div>

            <!-- Max Price -->
            <div class="col-md-2">
                <input type="number" name="maxPrice" class="form-control" 
                    placeholder="Max Price" value="@Model.MaxPrice" step="0.01" />
            </div>

            <!-- Quantity -->
            <div class="col-md-2">
                <input type="number" name="quantity" class="form-control" 
                    placeholder="Qty" value="@Model.Quantity" />
            </div>
        </div>
        <div class="row g-2 mt-1">
            <!-- Filter Button -->
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Filter</button>
            </div>

            <!-- Clear Button -->
            <div class="col-md-2">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">Clear</a>
            </div>
        </div>
    </form>

    <!-- Results Info -->
    <div class="alert alert-info mb-3">
        Showing <strong>@Model.Products.Count()</strong> of <strong>@Model.TotalCount</strong> products
    </div>

    <!-- Products Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th style="width:150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Any())
                {
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Description</td>
                            <td>
                                <span class="badge bg-@(item.Quantity > 10 ? "success" : item.Quantity > 0 ? "warning" : "danger")">
                                    @item.Quantity
                                </span>
                            </td>
                            <td>₹ @item.Price.ToString("F2")</td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            No products found matching your criteria.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" 
                        asp-action="Index" 
                        asp-route-page="@(Model.CurrentPage - 1)"
                        asp-route-search="@Model.Search"
                        asp-route-minPrice="@Model.MinPrice"
                        asp-route-maxPrice="@Model.MaxPrice"
                        asp-route-quantity="@Model.Quantity">
                        Previous
                    </a>
                </li>

                <!-- Page Numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                            asp-action="Index" 
                            asp-route-page="@i"
                            asp-route-search="@Model.Search"
                            asp-route-minPrice="@Model.MinPrice"
                            asp-route-maxPrice="@Model.MaxPrice"
                            asp-route-quantity="@Model.Quantity">
                            @i
                        </a>
                    </li>
                }

                <!-- Next Button -->
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" 
                        asp-action="Index" 
                        asp-route-page="@(Model.CurrentPage + 1)"
                        asp-route-search="@Model.Search"
                        asp-route-minPrice="@Model.MinPrice"
                        asp-route-maxPrice="@Model.MaxPrice"
                        asp-route-quantity="@Model.Quantity">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>
